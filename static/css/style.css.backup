}

body[data-theme="dark"] #violations-table-element thead th {
    background-color: #252525 !important;
    border-color: #333333 !important;
    color: #cccccc !important;
}

body[data-theme="dark"] #violations-table-element tbody td {
    border-color: #333333 !important;
    color: #ffffff !important;
}

body[data-theme="dark"] #violations-table-element tbody tr:hover {
    background-color: #2d2d2d !important;
}

/* Badges no tema escuro com prioridade máxima */
body[data-theme="dark"] .badge.bg-danger-subtle {
    background-color: rgba(255, 107, 107, 0.15) !important;
    color: #ff6b6b !important;
    border-color: rgba(255, 107, 107, 0.3) !important;
}

body[data-theme="dark"] .badge.bg-primary-subtle {
    background-color: rgba(74, 144, 226, 0.15) !important;
    color: #5dade2 !important;
    border-color: rgba(74, 144, 226, 0.3) !important;
}

body[data-theme="dark"] .badge.text-danger {
    color: #ff6b6b !important;
}

body[data-theme="dark"] .badge.text-primary {
    color: #5dade2 !important;
}

body[data-theme="dark"] .text-muted {
    color: #888888 !important;
}