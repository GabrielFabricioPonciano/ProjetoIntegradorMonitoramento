# ==========================================
# PI Monitoring - Environment Variables
# FastAPI Application Configuration
# ==========================================
# Copie este arquivo para .env e ajuste os valores conforme necess√°rio

# ==========================================
# Database Configuration
# ==========================================
# SQLite database file path (relative to project root)
DATABASE_PATH=data/monitoring.db

# ==========================================
# Server Configuration
# ==========================================
# Host and port for the FastAPI server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Set to 'true' for development hot-reload
DEBUG_MODE=false

# ==========================================
# Logging Configuration
# ==========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# Maximum log file size before rotation (in bytes, default 10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ==========================================
# Application Configuration
# ==========================================
# Timezone for timestamps
TIMEZONE=America/Sao_Paulo

# Temperature thresholds (in Celsius)
TEMP_LOW=17.0
TEMP_HIGH=19.5

# Relative humidity threshold (in percentage)
RH_LIMIT=62.0

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# ==========================================
# API Configuration
# ==========================================
# Maximum data points to return in series endpoint
MAX_SERIES_POINTS=1000

# Default number of violations to return
DEFAULT_VIOLATIONS_LIMIT=20

# ==========================================
# Cache Configuration
# ==========================================
# Cache TTL in seconds (for summary and series endpoints)
CACHE_TTL=30

# ==========================================
# Performance Monitoring
# ==========================================
# Enable performance metrics collection
ENABLE_METRICS=true

# ==========================================
# Security (Production Only)
# ==========================================
# Set to 'true' to enable HTTPS redirect
FORCE_HTTPS=false

# Secret key for signing (generate with: openssl rand -hex 32)
# SECRET_KEY=change-this-in-production

# API authentication (optional)
# API_KEY=your-api-key-here