# Projeto Integrador IV - Monitoramento de Temperatura e Umidade
# Arquivo de exemplo para variáveis de ambiente
# Copie este arquivo para .env e configure as variáveis

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pi_monitoring

# Redis Configuration (opcional)
REDIS_URL=redis://localhost:6379/1

# Email Configuration (para alertas)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Sentry Configuration (opcional)
SENTRY_DSN=https://your-sentry-dsn-here

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# API Configuration
API_RATE_LIMIT=100/hour

# Monitoring Configuration
ENABLE_PROMETHEUS=False
PROMETHEUS_PORT=8001